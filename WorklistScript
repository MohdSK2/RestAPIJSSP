<script>

function myFunc(processNameEN){if (processNameEN == "Change of Payment Terms") return "Änderung Zahlungskonditionen";else if (processNameEN == "Increase Credit Limit") return "Kreditlimiterhöhung";else if (processNameEN == "Production Adjustment Announcement" || processNameEN == "In House Production SubWorkflow") return "Ankündigung Bedarfsanpassung";else if (processNameEN == "Invest and Repair") return "Investitions- und Reparaturantrag";else if (processNameEN == "Operational Test") return "Betriebsversuch-Veranlassung";else if (processNameEN == "Private Label Request") return "Druckereietiketten";else if (processNameEN == "Travel Request") return "Reiseantrag";else if (processNameEN == "Sample Shipping") return "Musterversand";else if (processNameEN == "Security Stock Request") return "Kundensicherheitsbestand";else if (processNameEN == "Tank Allocation") return "Tankumbelegung";else return "It's a new app. Please add it to the script";}




var tasksHtml = '';var Worklist = $("[name='Worklist']");var widget = Worklist.data('sfc-worklist');var stuff = widget.GlobalArrayOfWorklistItems; var viewGuid = $("[name='dlHtmlResults']").closest('.panel').attr('data-areaitemid'); if (viewGuid == "00000000-0000-0000-0000-000000000000") { viewGuid = ""; } var someFilterValue = _runtimeParameters.viewControllers[viewGuid].filter.Value || ''; var wfDisplayName = _runtimeParameters.viewControllers[viewGuid].displayname.Value || '';if (someFilterValue) { stuff = stuff.filter(function (obj) { return obj.ProcessName.toLowerCase().indexOf(someFilterValue.toLowerCase()) !== -1 }); }var result = stuff.reduce(function (taskHtml2, obj) { return taskHtml2 += '<div class="TaskBlock" data="' + obj.Data + '">' + '<table style="table-layout: fixed; text-decoration: inherit; margin-left: 4px;margin-right: 4px;">' + '<tbody>' + '<tr>' + '<td style="color:#fff;font-size: 1.2rem;overflow-wrap: break-word;">' + obj.ActivityName + '</td>' + '<td style="color:#fff;font-size: 1.2rem;text-align: right;padding-right: 10px;overflow-wrap: break-word;">' + (new Date(obj.ActivityStartDate)).toLocaleDateString() + '</td>' + '</tr>' + '<tr>' + '<td style="color:#fff;font-size: 1rem;overflow-wrap: break-word;font-family:Arial;">' + obj.Folio + '</td>' + '<td style="color:#fff;font-size: 1rem;text-align:right;padding-right: 10px;overflow-wrap: break-word;font-family:Arial;">' + (wfDisplayName ? wfDisplayName : myFunc(obj.ProcessName)) + '</td>' + '</tr>' + '</tbody>' + '</table>' + '</div>'; }, ''); $("[name='dlHtmlResults']").SFCLabel('option', 'text', result); $('.TaskBlock').click(function () { var selectTaskURL = this.getAttribute("data"); $("[name='dlSelectedTaskUrl']").SFCLabel('option', 'text', selectTaskURL); $("[name='dlSelectedTaskSN']").SFCLabel('option', 'text', ($.grep(stuff, function (obj) { return obj.Data == selectTaskURL }))[0].SerialNumber); $("[name='dlSlotStatus']").SFCLabel('option', 'text', ($.grep(stuff, function (obj) { return obj.Data == selectTaskURL }))[0].Status); $('.TaskBlockSelected').removeClass("TaskBlockSelected").addClass("TaskBlock"); $(this).closest(".TaskBlock").removeClass("TaskBlock").addClass("TaskBlockSelected"); return false; }); if ($('.TaskBlock').length > 0) { $('.TaskBlock')[0].click(); }


